generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  uid           String   @id @unique
  fullname      String
  email         String   @unique
  emailVerified Boolean  @default(false)
  mobileNo      BigInt
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())
}

model Package {
  pID          String   @id @unique
  packageTitle String
  packageDesc  String
  price        String
  duration     String
  locations    String
  available    Boolean
  images       String[]
  excluions    String[]
  hotelDetails String[]
  incluions    String[]
  iternary     String[]
  validity     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())
}
