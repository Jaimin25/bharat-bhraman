generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  uid           String   @id @unique
  fullname      String
  email         String   @unique
  emailVerified Boolean  @default(false)
  mobileNo      BigInt
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())
}

model Package {
  pID          String   @id @unique
  packageTitle String
  packageDesc  String
  price        String
  duration     String
  locations    String
  available    Boolean
  images       String[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())
  excluions    String[]
  hotelDetails String[]
  incluions    String[]
  iternary     String[]
  validity     String
}

model BookingQuery {
  id           String   @id @unique
  pID          String
  packageTitle String
  uid          String
  fullname     String
  email        String
  mobileNo     String
  adults       String
  child        String
  infant       String
  status       String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())
}
